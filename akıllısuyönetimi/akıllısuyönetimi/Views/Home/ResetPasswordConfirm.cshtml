@* Views/Home/ResetPasswordConfirm.cshtml *@
@model ResetPasswordViewModel

@{
    Layout = null; // Bu satır menüyü devre dışı bırakır
}
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Yeni Şifre Oluştur - IZSU Yönetimi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Login sayfasından kopyalanan stiller */
        body {
            background-color: #f4f7f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            width: 100%;
            max-width: 450px;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .logo-section {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            font-size: 3em;
            color: #0b1a37;
            margin-right: 10px;
        }

        .logo-text {
            font-size: 1.5em;
            font-weight: 600;
            color: #0b1a37;
        }
    </style>
</head>
<body>

    <div class="login-container">

        <div class="logo-section">
            <i class="bi bi-droplet logo-icon"></i>
            <span class="logo-text">IZSU Yönetimi</span>
        </div>

        <h4 class="text-center mb-4">Yeni Şifre Oluşturma</h4>

        @if (Model != null && !string.IsNullOrEmpty(Model.Email))
        {
            <div class="alert alert-info small text-center mb-4">
                Şifrenizi sıfırlıyorsunuz: <strong>@Model.Email</strong>
            </div>
        }

        <form method="post" asp-controller="Home" asp-action="ResetPasswordConfirm">
            @* ACTION BURADA ResetPasswordConfirm olmalı *@

            @* E-posta bilgisini gizli olarak taşıyoruz *@
            <input type="hidden" asp-for="Email" />

            @Html.ValidationSummary(false, "", new { @class = "text-danger small mb-3" })

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Yeni Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                    @* ASP-FOR ile Password alanına bağladık *@
                    <input asp-for="Password" type="password" class="form-control" placeholder="Yeni Şifreniz" required>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                    @* ASP-FOR ile ConfirmPassword alanına bağladık *@
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Şifrenizi doğrulayın" required>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Şifreyi Değiştir</button>
            </div>

            <div class="text-center small">
                <a asp-controller="Home" asp-action="Login" class="text-muted"><i class="bi bi-arrow-left"></i> Giriş Sayfasına Geri Dön</a>
            </div>

        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* Client tarafı doğrulamayı aktif ediyoruz *@
    <partial name="_ValidationScriptsPartial" />
</body>
</html>