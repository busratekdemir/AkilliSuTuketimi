@* Views/Home/ForgotPassword.cshtml *@
@model ForgotPasswordViewModel
@{
    // Menüleri ve ana layout'u devre dışı bırakır.
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifre Sıfırlama Talebi - IZSU Yönetimi</title>

    @* Tüm CSS ve Bootstrap linkleri buraya kopyalandı *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Login sayfasından kopyalanan stil: Sayfayı ortalar ve kutuyu şekillendirir */
        body {
            background-color: #f4f7f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .logo-section {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            font-size: 3em;
            color: #0b1a37;
            margin-right: 10px;
        }

        .logo-text {
            font-size: 1.5em;
            font-weight: 600;
            color: #0b1a37;
        }
    </style>
</head>
<body>

    <div class="login-container">

        <div class="logo-section">
            <i class="bi bi-droplet logo-icon"></i>
            <span class="logo-text">IZSU Yönetimi</span>
        </div>

        <h4 class="text-center mb-4">Şifre Sıfırlama Talebi</h4>

        <form method="post" asp-controller="Home" asp-action="ForgotPassword">

            @Html.ValidationSummary(false, "", new { @class = "text-danger small mb-3" })

            <div class="mb-3">
                <label asp-for="Email" class="form-label">E-posta Adresi</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Kayıtlı e-posta adresiniz" required>
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="d-grid gap-2 mb-3">
                @* 👇 BUTON DÜZELTİLDİ: Artık "Bağlantı Gönder" yerine "Devam" diyelim 👇 *@
                <button type="submit" class="btn btn-primary btn-lg">Devam</button>
            </div>

            <div class="text-center small">
                <a asp-controller="Home" asp-action="Login" class="text-muted"><i class="bi bi-arrow-left"></i> Giriş Sayfasına Geri Dön</a>
            </div>

        </form>
    </div>

    @* Doğrulama ve Bootstrap scriptleri *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>