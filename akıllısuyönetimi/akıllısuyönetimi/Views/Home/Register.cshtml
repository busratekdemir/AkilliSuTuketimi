@* Views/Home/Register.cshtml *@
@{
    // Bu sayfanın _Layout.cshtml dosyasını kullanmamasını sağlar
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - IZSU Akıllı Su Yönetimi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Login sayfasından kopyalanan stiller */
        body {
            background-color: #f4f7f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            width: 100%;
            max-width: 450px; /* Kayıt formunu biraz daha geniş tuttuk */
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .logo-section {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            font-size: 3em;
            color: #0b1a37;
            margin-right: 10px;
        }

        .logo-text {
            font-size: 1.5em;
            font-weight: 600;
            color: #0b1a37;
        }
    </style>
</head>
<body>

    <div class="login-container">

        <div class="logo-section">
            <i class="bi bi-droplet logo-icon"></i>
            <span class="logo-text">IZSU Yönetimi</span>
        </div>

        <h4 class="text-center mb-4">Yeni Kullanıcı Kaydı</h4>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger small text-center">
                @ViewBag.ErrorMessage
            </div>
        }
        <form method="post" asp-controller="Home" asp-action="Register">

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="firstName" class="form-label">Adınız</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName" class="form-label">Soyadınız</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">E-posta Adresi</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control" id="email" name="email" placeholder="ornek@mail.com" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" id="password" name="password" placeholder="En az 6 karakter" required>
                </div>
            </div>

            <div class="mb-4">
                <label for="confirmPassword" class="form-label">Şifre (Tekrar)</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Şifrenizi doğrulayın" required>
                </div>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Hesap Oluştur</button>
            </div>

            <div class="text-center small">
                Zaten hesabınız var mı? <a asp-controller="Home" asp-action="Login" class="text-muted">Giriş Yap</a>
            </div>

        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>