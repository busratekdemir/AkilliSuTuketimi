@* Views/Home/Login.cshtml *@
@model LoginViewModel
@{
    // Bu sayfanın _Layout.cshtml dosyasını kullanmamasını sağlar
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - IZSU Akıllı Su Yönetimi</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Merkezi Konumlandırma Stilleri */
        body {
            background-color: #f4f7f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .logo-section {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            font-size: 3em;
            color: #0b1a37;
            margin-right: 10px;
        }

        .logo-text {
            font-size: 1.5em;
            font-weight: 600;
            color: #0b1a37;
        }
    </style>
</head>
<body>

    <div class="login-container">

        <div class="logo-section">
            <i class="bi bi-droplet logo-icon"></i>
            <span class="logo-text">IZSU Yönetimi</span>
        </div>

        <h4 class="text-center mb-4">Hesabınıza Giriş Yapın</h4>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger small text-center">
                @ViewBag.ErrorMessage
            </div>
        }

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success small text-center">
                @TempData["SuccessMessage"]
            </div>
        }

        <form method="post" asp-controller="Home" asp-action="Login">

            @* Hata Mesajlarını Göstermek İçin *@
            @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3 small" })

            <div class="mb-3">
                <label for="email" class="form-label">E-posta Adresi</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input type="email" class="form-control" id="email" name="Email" placeholder="E-posta adresiniz" required>
                </div>
            </div>

            <div class="mb-4">
                <label for="password" class="form-label">Şifre</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Şifreniz" required>
                </div>
                <div class="text-end small mt-1">
                    <a asp-controller="Home" asp-action="ForgotPassword" class="text-muted">Şifremi Unuttum?</a>
                </div>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
            </div>

            <div class="text-center small">
                Hesabınız yok mu? <a asp-controller="Home" asp-action="Register" class="text-muted">Kayıt Ol</a>
            </div>

        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @* 👇 KRİTİK EKLENTİ: Client tarafı doğrulamayı aktif ediyoruz 👇 *@
    <partial name="_ValidationScriptsPartial" />

</body>
</html>