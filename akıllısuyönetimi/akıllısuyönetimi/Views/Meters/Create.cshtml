@model akıllısuyönetimi.Models.Meter
@{
    ViewData["Title"] = "Yeni Sayaç Kaydı";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-plus-circle me-2"></i>Yeni Sayaç Ekle</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">SAYAÇ KODU</label>
                            <input asp-for="MeterCode" class="form-control rounded-3" placeholder="SYC-001" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">SERİ NUMARASI</label>
                            <input asp-for="SerialNumber" class="form-control rounded-3" placeholder="SN-100" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted small">LOKASYON</label>
                            <input asp-for="Location" class="form-control rounded-3" placeholder="Mahalle, Sokak..." required />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold text-muted small">TİP</label>
                                <select asp-for="Type" class="form-select rounded-3">
                                    <option value="Dijital">Dijital</option>
                                    <option value="Smart">Smart</option>
                                    <option value="Analog">Analog</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold text-muted small">DURUM</label>
                                <select asp-for="Status" class="form-select rounded-3">
                                    <option value="Aktif">Aktif</option>
                                    <option value="Pasif">Pasif</option>
                                    <option value="Bakımda">Bakımda</option>
                                </select>
                            </div>
                        </div>
                        <hr class="my-4 text-muted opacity-25">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary fw-bold px-4 rounded-3 w-100">Kaydet</button>
                            <a asp-action="Index" class="btn btn-light fw-bold px-4 rounded-3 w-100 border">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>