@model akıllısuyönetimi.Models.Meter
@{
    ViewData["Title"] = "Sayaç Bilgilerini Güncelle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                @* Başlık Alanı *@
                <div class="card-header bg-dark text-white p-3">
                    <h5 class="fw-bold mb-0">
                        <i class="bi bi-pencil-square me-2 text-warning"></i> Sayaç Bilgilerini Güncelle
                    </h5>
                </div>

                <div class="card-body p-4 bg-white">
                    <form asp-action="Edit" method="post">
                        @* ID bilgisini gizli olarak gönderiyoruz ki hangi kaydı güncelleyeceğimizi bilelim *@
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3">
                            @* Sayaç Kodu - Genelde değiştirilmez, sadece okunabilir yaptık *@
                            <div class="col-md-12">
                                <label class="form-label fw-bold text-muted small">SAYAÇ KODU (Değiştirilemez)</label>
                                <input asp-for="MeterCode" class="form-control bg-light rounded-3" readonly />
                            </div>

                            @* Seri Numarası *@
                            <div class="col-md-12">
                                <label class="form-label fw-bold text-muted small">SERİ NUMARASI</label>
                                <input asp-for="SerialNumber" class="form-control rounded-3" required />
                            </div>

                            @* Lokasyon *@
                            <div class="col-md-12">
                                <label class="form-label fw-bold text-muted small">LOKASYON BİLGİSİ</label>
                                <input asp-for="Location" class="form-control rounded-3" placeholder="Örn: Konak - Alsancak" required />
                            </div>

                            @* Tip *@
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted small">SAYAÇ TİPİ</label>
                                <select asp-for="Type" class="form-select rounded-3">
                                    <option value="Dijital">Dijital</option>
                                    <option value="Smart">Smart</option>
                                    <option value="Analog">Analog</option>
                                </select>
                            </div>

                            @* Durum *@
                            <div class="col-md-6">
                                <label class="form-label fw-bold text-muted small">GÜNCEL DURUM</label>
                                <select asp-for="Status" class="form-select rounded-3">
                                    <option value="Aktif">Aktif</option>
                                    <option value="Pasif">Pasif</option>
                                    <option value="Bakımda">Bakımda</option>
                                </select>
                            </div>
                        </div>

                        <hr class="my-4 opacity-25">

                        @* Butonlar *@
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success fw-bold px-4 rounded-3 w-100 shadow-sm">
                                <i class="bi bi-check-lg me-1"></i> Değişiklikleri Kaydet
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary fw-bold px-4 rounded-3 w-100">
                                İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            @* Küçük Bilgi Notu *@
            <div class="text-center mt-3 text-muted small">
                <i class="bi bi-info-circle me-1"></i> Sayacı sildiğinizde bu işlem geri alınamaz.
            </div>
        </div>
    </div>
</div>