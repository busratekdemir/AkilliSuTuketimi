@model IEnumerable<akıllısuyönetimi.Models.Meter>

<div class="container-fluid py-4" style="background-color: #f4f7f6; min-height: 100vh;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Sayaç Yönetimi</h2>
        <a asp-action="Create" class="btn btn-primary fw-bold px-4 rounded-3 shadow-sm">
            <i class="bi bi-plus-lg"></i> Yeni Sayaç Ekle
        </a>
    </div>

    @* Üst İstatistik Kartları *@
    <div class="row g-4 mb-5">
        @{
            var statusCards = new List<dynamic> {
                new { Title = "Bu Ay Toplam", Value = ViewBag.TotalMonthly ?? "0", Unit = "m³", Trend = (ViewBag.ChangeRate ?? "- %0") + " azalma", Color = "text-danger" },
                new { Title = "Günlük Ortalama", Value = ViewBag.DailyAvg ?? "0", Unit = "m³", Trend = ViewBag.ChangeRate ?? "+ %0", Color = "text-success" },
                new { Title = "Kişi Başı Tüketim", Value = ViewBag.PerPerson ?? "142", Unit = "lt/gün", Trend = "- %2.5 azalma", Color = "text-success" },
                new { Title = "Tasarruf Potansiyeli", Value = ViewBag.Savings ?? "0", Unit = "m³", Trend = "Bu ay için", Color = "text-muted" }
                };
        }

        @foreach (var card in statusCards)
        {
            <div class="col-md-3">
                <div class="card border-0 shadow-sm rounded-3 overflow-hidden h-100" style="border: 1px solid #e0e0e0 !important;">
                    <div class="p-2 px-3 bg-light text-muted fw-bold border-bottom" style="font-size: 0.8rem; letter-spacing: 0.5px;">
                        @card.Title.ToUpper()
                    </div>
                    <div class="card-body p-4">
                        <h2 class="fw-bold mb-0">@card.Value <small class="fs-5 text-muted">@card.Unit</small></h2>
                    </div>
                    <div class="p-2 px-3 bg-white border-top @card.Color" style="font-size: 0.85rem; font-weight: 600;">
                        @card.Trend
                    </div>
                </div>
            </div>
        }
    </div>

    @* Sayaç Tablosu *@
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table align-middle mb-0 table-hover">
            <thead class="bg-light text-muted small fw-bold">
                <tr>
                    <th class="ps-4 py-3">SAYAÇ KODU</th>
                    <th class="ps-2">LOKASYON</th>
                    <th>TİP</th>
                    <th>DURUM</th>
                    <th class="text-end pe-4">İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4 fw-bold">@item.MeterCode</td>
                        <td>
                            <i class="bi bi-geo-alt text-muted me-1"></i>
                            @item.Location
                        </td>
                        <td>
                            <span class="badge rounded-pill bg-primary-subtle text-primary px-3">
                                @item.Type
                            </span>
                        </td>
                        <td>
                            @{
                                var statusStyle = item.Status == "Aktif" ? "bg-success-subtle text-success" :
                                item.Status == "Bakımda" ? "bg-warning-subtle text-warning" :
                                "bg-danger-subtle text-danger";
                            }
                            <span class="badge rounded-pill @statusStyle px-3">
                                <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i> @item.Status
                            </span>
                        </td>
                        <td class="text-end pe-4">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link text-primary p-0 me-3 text-decoration-none">
                                <i class="bi bi-pencil-square fs-5"></i>
                            </a>
                            <button type="button" onclick="deleteMeter(@item.Id)" class="btn btn-link text-danger p-0 text-decoration-none border-0 bg-transparent">
                                <i class="bi bi-trash fs-5"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
                function deleteMeter(id) {
            if (confirm("Bu sayacı silmek istediğinize emin misiniz?")) {
                $.ajax({
                    // URL yolunun controller isminle aynı olduğundan emin ol (Meters)
                    url: '@Url.Action("Delete", "Meters")/' + id,
                    type: 'POST',
                    success: function(result) {
                        if (result.success) {
                            // Sayfayı yenilemek yerine satırı anında kaldırmak daha iyidir
                            location.reload();
                        } else {
                            alert("Silme işlemi başarısız: " + result.message);
                        }
                    },
                    error: function() {
                        alert("Sunucuyla iletişim kurulurken bir hata oluştu.");
                    }
                });
            }
        }
    </script>
}
