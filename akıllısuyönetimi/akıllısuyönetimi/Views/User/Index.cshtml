@model IEnumerable<akıllısuyönetimi.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container-fluid py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people-fill me-2"></i> Kullanıcı Listesi</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-person-plus-fill"></i> Yeni Kullanıcı Ekle
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Sistemde kayıtlı kullanıcı bulunmamaktadır.</div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Ad Soyad</th>
                                <th>E-posta</th>
                                <th>Rol</th>
                                <th>Kayıt Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="badge @(item.Role == "Admin" ? "bg-danger" : "bg-success")">
                                            @item.Role
                                        </span>
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-2" title="Düzenle">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>